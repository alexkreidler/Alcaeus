{
  "extends": [
    "@tpluscode"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "@typescript-eslint/indent": ["error", 4],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["tests/**"]}]
  }
}
