{
  "name": "heracles",
  "version": "0.1.0",
  "description": "Hydra Core hypermedia-aware client library",
  "main": "dist/heracles.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "./node_modules/karma/bin/karma start --single-run",
    "build": "jspm bundle src/heracles.ts - jsonld - li - lodash dist/heracles.js --skip-source-maps --global-name heracles --minify"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wikibus/heracles"
  },
  "keywords": [
    "ajax",
    "hydra",
    "semanticweb",
    "hypermedia",
    "rdf",
    "json-ld"
  ],
  "author": "Tomasz Pluskiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wikibus/heracles/issues"
  },
  "homepage": "https://github.com/wikibus/heracles#readme",
  "jspm": {
    "registry": "jspm",
    "format": "cjs",
    "directories": {
      "test": "tests"
    },
    "dependencies": {
      "jsonld": "npm:jsonld@^0.4.6",
      "li": "npm:li@^1.0.1",
      "lodash": "npm:lodash@^4.9.0"
    },
    "devDependencies": {
      "sinon": "npm:sinon@^1.17.3",
      "typescript": "npm:typescript@^1.6.2"
    },
    "buildConfig": {
      "minify": true,
      "transpileES6": true
    }
  },
  "devDependencies": {
    "es6-module-loader": "^0.17.11",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-jasmine": "^0.3.8",
    "karma-systemjs": "^0.13.0",
    "systemjs": "^0.19.25",
    "typescript": "^1.8.9"
  }
}
